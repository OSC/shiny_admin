<%# Uses rails_bootstrap_form gem. API at: https://github.com/bootstrap-ruby/rails-bootstrap-forms %>
<%= bootstrap_form_for(blast) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>

  <%= f.text_field :name %>

  <%= f.select :database, Blast::DB_OPTIONS %>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
  <%= f.button 'Reset', type: :reset, class: 'btn btn-default' %>

  <hr>

  <%= link_to 'Back', blasts_path, class: 'btn btn-default' %>
  <%= link_to 'Show', blast, class: 'btn btn-primary' unless blast.new_record? %>
<% end %>
